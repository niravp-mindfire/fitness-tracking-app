{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "types": ["node", "express", "jest"] // Add "jest" here
  },
  "include": [
    "src/**/*",
    "src/tests/**/*",
    "@types"
  ]
}
