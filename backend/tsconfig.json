{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // Optional: Skips type checking for declaration files
    "typeRoots": ["./node_modules/@types", "./@types"],
    "types": ["node", "express"] // Ensure "express" is included
  },
  "include": [
    "src/**/*", // Include all files in src
    "@types"
  ]
}
